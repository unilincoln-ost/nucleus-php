{
    "name": "Nucleus",
    "description": "Nucleus allows you to interact with the University of Lincoln's data.",
    "operations": {
    	"GetCollege": {
            "httpMethod": "GET",
            "uri": "/colleges/id/{id}",
            "summary": "Gets a college.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            }
        },
        "GetDataset": {
            "httpMethod": "GET",
            "uri": "/datasets/id/{id}",
            "summary": "Gets a research projects.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            }
        },
        "CreateEprint": {
            "httpMethod": "POST",
            "uri": "/eprints",
            "summary": "Creates an ePrint.",
            "parameters": {
	            "eprints_id": {
		            "location": "json",
		            "type": "string",
		            "required": true
	            },
	            "title": {
		            "location": "json",
		            "type": "string",
		            "required": true
	            },
	            "doi": {
		            "location": "json",
		            "type": "string",
		            "required": true
	            },
	            "date_year":{
		            "location": "json",
		            "type": "integer",
		            "required": true
	            },
	            "publisher":{
		            "location": "json",
		            "type": "string",
		            "required": true
	            },
	            "abstract":{
		            "location": "json",
		            "type": "string"
	            },
	            "dataset_id":{
		            "location": "json",
		            "type": "string"
	            },
	            "eprints_type": {
		            "type": "object",
		            "location": "json",
		            "required": true,
		            "properties": {
			            "id": {
				            "type": "integer",
				            "required": true
			            }
		            }
	            },
	            "research_project": {
		            "type": "object",
		            "location": "json",
		            "required": true,
		            "properties": {
			            "id": {
				            "type": "integer",
				            "required": true
			            }
		            }
	            }	            
            },
            "responseClass": "NucleusResponse"
        },
        "GetLocations": {
            "httpMethod": "GET",
            "uri": "/locations",
            "summary": "Gets a list of geographical locations.",
            "parameters": {
                "page": {
                    "location": "query",
                    "type": "integer"
                },
                "limit": {
                    "location": "query",
                    "type": "integer"
                }
            }
        },
        "GetLocation": {
            "httpMethod": "GET",
            "uri": "/locations/id/{id}",
            "summary": "Gets a location record.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            }
        },
        "GetPerson": {
            "httpMethod": "GET",
            "uri": "/people/id/{id}",
            "summary": "Gets a person record.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            }
        },
        "GetResearchInterests": {
            "httpMethod": "GET",
            "uri": "/research_interests",
            "summary": "Gets a list of research interests.",
            "parameters": {
                "page": {
                    "location": "query",
                    "type": "integer"
                },
                "limit": {
                    "location": "query",
                    "type": "integer"
                }
            }
        },
        "GetResearchInterest": {
            "httpMethod": "GET",
            "uri": "/research_interests/id/{id}",
            "summary": "Gets a research interest.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            }
        },
        "GetResearchProjects": {
            "httpMethod": "GET",
            "uri": "/research_projects",
            "summary": "Gets a list of research projects.",
            "parameters": {
                "account": {
                    "location": "query",
                    "type": "string"
                },
                "page": {
                    "location": "query",
                    "type": "integer"
                },
                "limit": {
                    "location": "query",
                    "type": "integer"
                },
                "school": {
                    "location": "query",
                    "type": "integer"
                },
                "college": {
                    "location": "query",
                    "type": "integer"
                },
                "public": {
                    "location": "query",
                    "type": "boolean"
                }
            }
        },
        "GetResearchProjectPermissions": {
            "httpMethod": "GET",
            "uri": "/research_project_permissions",
            "summary": "Gets a list of research project permissions.",
            "parameters": {
                "account": {
                    "location": "query",
                    "type": "string"
                }
            }
        },
        "GetResearchProject": {
            "httpMethod": "GET",
            "uri": "/research_projects/id/{id}",
            "summary": "Gets a research projects.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            },
            "errorResponses": [
                {
                    "code": 404,
                    "phrase": "Research Project not found",
                    "class": "ResearchProjectNotFoundException"
                },
                {
                    "code": 401,
                    "phrase": "Unauthorised",
                    "class": "UnauthorisedException"
                }
            ]
        },
        "CreateResearchProject": {
            "httpMethod": "POST",
            "uri": "/research_projects",
            "summary": "Edits a research projects details.",
            "parameters": {
	            "title": {
		            "location": "json",
		            "type": "string",
		            "required": true
	            },
	            "summary": {
		            "location": "json",
		            "type": "string"
	            },
	            "website": {
		            "location": "json",
		            "type": "string"
	            },
	            "start_date": {
		            "location": "json",
		            "type": "string",
		            "required": true
	            },
	            "end_date": {
		            "location": "json",
		            "type": "string"
	            },
	            "research_project_status_id": {
		            "location": "json",
		            "type": "integer"
	            },
	            "project_members": {
		            "location": "json",
		            "type": "array",
		            "items": {
			            "type": "object",
			            "properties": {
				            "person_id": {
					            "type": "integer",
					            "required": true
				            },
				            "permission_id": {
					            "type": "integer",
					            "required": true
				            }
			            }
		            }
	            }
            },
            "responseClass": "NucleusResponse"
        },
        "EditResearchProject": {
            "httpMethod": "POST",
            "uri": "/research_projects/id/{id}",
            "summary": "Edits a research projects details.",
            "parameters": {
	            "id": {
		            "location": "uri",
		            "type": "integer",
		            "required": true
	            },
	            "title": {
		            "location": "json",
		            "type": "string"
	            },
	            "website": {
		            "location": "json",
		            "type": "string"
	            },
	            "research_interests": {
		            "location": "json",
		            "type": "string"
	            },
	            "summary": {
		            "location": "json",
		            "type": "string"
	            },
	            "project_visibility": {
		            "location": "json",
		            "type": "string"
	            },
	            "start_date": {
		            "location": "json",
		            "type": "string"
	            },
	            "end_date": {
		            "location": "json",
		            "type": "string"
	            },
	            "research_project_status_id": {
		            "location": "json",
		            "type": "integer"
	            },
	            "project_members": {
		            "location": "json",
		            "type": "array",
		            "items": {
			            "type": "object",
			            "properties": {
				            "person_id": {
					            "type": "integer",
					            "required": true
				            },
				            "permission_id": {
					            "type": "integer",
					            "required": true
				            },
				            "role": {
					            "type": "string",
					            "required": true
				            }
			            }
		            }
	            },
	            "ckan_group_id": {
		            "location": "json",
		            "type": "string"
	            }
            },
            "responseClass": "NucleusResponse"
        },
        "DeleteResearchProject": {
            "httpMethod": "DELETE",
            "uri": "/research_projects/id/{id}",
            "summary": "Edits a research projects details.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            },
            "responseClass": "NucleusResponse"
        },
        "GetResearchShowcases": {
            "httpMethod": "GET",
            "uri": "/research_showcases",
