                }
            }
        },
        "GetResearchShowcase": {
            "httpMethod": "GET",
            "uri": "/research_showcases/id/{id}",
            "summary": "Gets a research showcase.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            }
        },
        "GetSchool": {
            "httpMethod": "GET",
            "uri": "/schools/id/{id}",
            "summary": "Gets a school.",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                }
            }
        }
    },
    "models": {
        "NucleusResponse": {
            "type": "object",
            "properties": {
                "http_code": {
                    "location": "statusCode",
                    "type": "integer"
                },
                "body": {
                    "location": "body",
                    "type": "string"
                }
            }
        }
    }
}